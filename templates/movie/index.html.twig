{% extends 'base.html.twig' %}

{% block title %}Liste des Films{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { bdireckground: #F5F5F5; padding: 2px 6px; }
</style>

<h2 class="border border-dark rounded p-2 m-2 text-white bg-primary">Liste des Films</h2>

    {% for movie in movies %}
        <h3>{{movie.title}}</h3><br>
        Date de sortie : le {{movie.date | date('d/m/Y')}}<br>
        Durée : {{movie.duration}}<br><br>
        <a href="{{ path('affichemovie', {'id':movie.id}) }}"><img src="{{movie.cover}}" width=150></a>
        <br><br>
        <h5>Acteur.trice(s) :</h5>
        {%for actor in movie.actors %}
            - {{actor.prenom}} {{actor.nom}}<br>
        {% endfor %}<br>
        <h5>Réalisateur.trice(s) :</h5>
         {{movie.director.prenom}} {{movie.director.nom}}
        <br><br>
        Genre : {{movie.genre.type}}
        <br><br>
        {{movie.description}}
        <br>
        <br>
        <a href="{{ path('modifmovie', {'id':movie.id}) }}">MODIFIER</a><br>
        <hr>
    {% endfor %}

{% endblock %}